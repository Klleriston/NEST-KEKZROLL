generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id  @default(uuid())
  username  String    @unique
  email     String    @unique 
  password  String

  favorites User_favorites[]
}

model Anime {
  anime_id    String       @id @default(uuid())
  title       String
  description String
  studio     String?
  date_aired  DateTime?

  favorites User_favorites[]
}

model User_favorites {
  user_id String
  anime_id String
  user   User @relation(fields: [user_id], references: [id])
  anime  Anime @relation(fields: [anime_id], references: [anime_id])
  @@id([user_id, anime_id])
}
